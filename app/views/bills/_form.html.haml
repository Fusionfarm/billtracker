= simple_form_for(@bill) do |f|
  = f.error_notification

  .form-inputs
    = f.input :ext_bill_id, :label => "Bill id"
    = f.input :state
    = f.input :session
    = f.input :reporter_description, :input_html => { :rows => 5 }
    %h2 Topics
    = f.collection_check_boxes :topic_ids, Topic.all_alphabetical, :id, :name
    = render 'annotations', f: f
  .form-actions
    = f.button :submit, :class => 'btn-primary'
